<!DOCTYPE html>
<html lang="en">

<head>
  <title>Your Vault</title>

  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous" />

  <!-- FontAwesome CSS -->
  <link crossorigin="anonymous" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css"
    integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A=="
    referrerpolicy="no-referrer" rel="stylesheet" />

  <!-- Font Family -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Righteous&family=Noto+Sans&display=swap" rel="stylesheet">

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/navbar.css" />
  <link rel="stylesheet" href="/styles/sidebar.css" />
  <link rel="stylesheet" href="/styles/items.css" />

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/app.js"></script>
  <script defer src="/scripts/passwordGenerator.js"></script>

</head>

<body>
  <div id="unlocked-app">
    <!-- NavBar -->
    <div class="navbar navbar-expand-md" id="nav-bar">
      <div class="container-fluid">
        <img src="resources/logo.png" class="logo">
        <a class="navbar-brand" id="navbar-brand" href="#">PasswordKeepeR</a>
        <div class="user-menu" id="user-menu">
          <div class="user-menu-group">
            <img src="resources/avatar.png" class="user_avatar">
            <!-- <button id="userMenuContainer" class="menuButtonRight space-clickable" aria-expanded="false" -->
            <!-- aria-label="User Menu"> -->
            <!-- <%= vault.org_name %> -->
            <!-- </button> -->
            <!-- <span class="fa fa-solid fa-chevron-down fa-xs"></span> -->
            <div class="dropdown" id="dropdown-menu">
              <button class="btn btn-light dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown"
                aria-haspopup="true" aria-expanded="false">
                <%= vault.org_name %>
              </button>
              <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" href="#">Log Out</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- NavBar End -->
    <section id="vault-content">

      <!-- SideBar -->
      <nav id="sidebar-container" class="d-md-block col-2">
        <!-- Bootstrap List Group -->
        <ul class="list-group">
          <li>
            <button class="sidebar-list-button">
              <span class="fa fa-calendar fa-fw mr-3"></span>
              <span class="name">All Items</span>
            </button>
          </li>
          <!-- Separator with title -->
          <div class="sidebar-section-header">
            <h2>CATEGORIES</h2>
          </div>
          <!-- /END Separator -->
          <li>
            <button class="sidebar-list-button">
              <span class="fa fa-thin fa-briefcase mr-3"></span>
              <span class="name">Work</span>
            </button>
          </li>
          <li>
            <button class="sidebar-list-button">
              <span class="fa fa-thin fa-film mr-3"></span>
              <span class="name">Entrainment</span>
            </button>
          </li>
          <li>
            <button class="sidebar-list-button">
              <span class="fa fa-thin fa-gamepad mr-3"></span>
              <span class="name">Games</span>
            </button>
          </li>
        </ul>
        <!-- List Group END-->
      </nav>
      <!-- Sidebar End -->
      <div id="item-list">
        <ul id="items-ul">
          <% for (let item in vault.vault) {%>
            <li class="items">
              <button class="list-item">
                <h4 class="title">
                  <%= vault.vault[item].item %>
                </h4>
              </button>
            </li>
            <% }%>
        </ul>
      </div>
      <div id="item-details">
        <div class="new-item">
          <form action="/api/new-item" method="POST">
            <table class="section-itemName">
              <tbody>
                <tr class="field string">
                  <td class="title first-col">
                    <span class="section-name">New item Name</span>
                  </td>
                  <td class="value string">
                    <input autocapitalize="none" autocorrect="off" class="value-input" placeholder="new field"
                      type="text" name="itemName" value></input>
                  </td>
                </tr>
              </tbody>
            </table>
            <table class="section-username-password">
              <tbody>
                <tr class="field string">
                  <td class="title first-col">
                    <span class="section-name">username</span>
                  </td>
                  <td class="value string">
                    <input autocapitalize="none" autocorrect="off" class="value-input" placeholder="new field"
                      type="text" name="username" value></input>
                  </td>
                </tr>
                <tr class="field concealed">
                  <td class="title first-col">
                    <span class="section-name">password</span>
                  </td>
                  <td class="value concealed show-password-generator">
                   <div id="passwordDiv">
                    <input type="text" class="value-input" spellcheck="false" autocapitalize="none" autocorrect="off"
                      name="password" id="passwordText" value>
                    <button id="copyButton"></button>
                    </div>
                  </td>
                </tr>
              </tbody>
            </table>
            <table class="section-websites">
              <tbody>
                <tr class="field URL new-field">
                  <td class="title first-col">
                    <span class="section-name">website</span>
                  </td>
                  <td class="value URL">
                    <input type="text" class="value-input" autocapitalize="none" autocorrect="off"
                      placeholder="web address" name="website" value>
                  </td>
                </tr>
                <tr class="field string new-field ">
                  <td class="title first-col">
                    <span class="section-name">category</span>
                  </td>
                  <td class="category">
                    <input type="text" class="value-input" autocapitalize="none" autocorrect="off"
                      placeholder="category" name="category" value>
                  </td>
                </tr>
              </tbody>
            </table>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        </div>

          <div class="pw-container">
            <div class="pw-body">
              <form id="generateButton" >
              <div class="form-control">
                <label for="length">Password Length</label>
                <input id="length" value="1" type="number" min="4" max="12" name="passwordLength">
              </div>
              <div class="form-control">
                <label for="upper">Contain Uppercase Letters</label>
                <input id="upper" type="checkbox" value="uppercase" name="passwordCharacters">
              </div>
              <div class="form-control">
                <label for="lower">Contain Lowercase Letters</label>
                <input id="lower" type="checkbox"  value="lowercase" name="passwordCharacters">
              </div>
              <div class="form-control">
                <label for="number">Contain Numbers </label>
                <input id="number" type="checkbox" value="numbers" name="passwordCharacters">
              </div>
              <div class="form-control">
                <label for="characters">Contain Symbols</label>
                <input id="characters" type="checkbox" value="symbols" name="passwordCharacters">
              </div>
              <button type="submit" id="generate">Generate Password</button>
              </form>
            </div>
          </div>


      </div>
    </section>
  </div>
</body>

</html>
